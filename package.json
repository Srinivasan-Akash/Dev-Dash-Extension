{
  "name": "dev-dash",
  "displayName": "Dev Dash",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "editor/context": [
        {
          "command": "devDash.minify",
          "group": "1_modification",
          "when": "editorHasSelection"
        },
        {
          "command": "devDash.convertToReact",
          "group": "1_modification",
          "when": "editorHasSelection"
        },
        {
          "command": "devDash.convertToNext",
          "group": "1_modification",
          "when": "editorHasSelection"
        },
        {
          "command": "devDash.highlightCode",
          "group": "1_modification",
          "when": "editorHasSelection"
        }
      ]
    },
    "commands": [
      {
        "command": "devDash.randomColor",
        "title": "Change Workspace To Random Color",
        "category": "Dev Dash"
      },
      {
        "command": "devDash.resetColor",
        "title": "Reset Colors Of Work Space",
        "category": "Dev Dash"
      },
      {
        "command": "devDash.minify",
        "title": "Minify Code From Dev Dash",
        "category": "Dev Dash"
      },
      {
        "command": "devDash.convertToReact",
        "title": "Convert To React JSX From Dev Dash",
        "category": "Dev Dash"
      },
      {
        "command": "devDash.convertToNext",
        "title": "Convert To Next.js JSX From Dev Dash",
        "category": "Dev Dash"
      },
      {
        "command": "devDash.highlightCode",
        "title": "Highlight Code From Dev Dash",
        "category": "Dev Dash"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devDash-sidebar-view",
          "title": "Dev Dash",
          "icon": "icons/logo.png"
        }
      ]
    },
    "views": {
      "devDash-sidebar-view": [
        {
          "type": "webview",
          "id": "devDash-sidebar",
          "name": "devDash",
          "icon": "icons/logo.png",
          "contextualTitle": "devDash"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "appwrite": "^11.0.0"
  }
}
